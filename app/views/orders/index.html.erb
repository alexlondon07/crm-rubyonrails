<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>User</th>
      <th>Route</th>
      <th>Zone</th>
      <th>Code</th>
      <th>Date</th>
      <th>City</th>
      <th>Observations</th>
      <th>Enable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client %></td>
        <td><%= order.user %></td>
        <td><%= order.route %></td>
        <td><%= order.zone %></td>
        <td><%= order.code %></td>
        <td><%= order.date %></td>
        <td><%= order.city %></td>
        <td><%= order.observations %></td>
        <td><%= order.enable %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

