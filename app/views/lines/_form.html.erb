<%= form_for @line, :html => { :class => 'form-horizontal' } do |f| %>
<% if @line.errors.any? %>
<div class="col-lg-8 col-lg-offset-2">
  <div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Please correct the following errors:</strong>
    <ul>
      <% @line.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-2">

      <div class="form-group">
        <label class="col-sm-4 control-label">Name<font color="#a94442">*</font></label>
        <div class="col-sm-8">
          <%= f.text_field :name, placeholder: "" , class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 control-label">Code</label>
        <div class="col-sm-8">
          <%= f.text_field :code, placeholder: "" , class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 control-label">Description</label>
        <div class="col-sm-8">
          <%= f.text_area :description, placeholder: "" , class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 control-label">Enable</label>
        <div class="col-sm-8">
          <%= f.text_field :enable, placeholder: "" , class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary pull-right" %>
      </div>
    </div>
  </div>
</div>
<% end %>
