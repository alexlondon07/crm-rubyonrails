<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Detalles de Ruta #<%= @route.id %></h3>
  </div>
  <div class="panel-body">
    <p>
      <strong>Nombre:</strong>
      <%= @route.name %>
    </p>

    <p>
      <strong>Código:</strong>
      <%= @route.code %>
    </p>

    <p>
      <strong>Descripción:</strong>
      <%= @route.description %>
    </p>
  </div>
</div>

<%= link_to "Editar",edit_route_path(@route), class: "btn btn-success" %>
<%= link_to "Atras",routes_path, class: "btn btn-info" %>
