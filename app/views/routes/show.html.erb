<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Details#<%= @route.id %></h3>
  </div>
  <div class="panel-body">
    <p>
      <strong>name:</strong>
      <%= @route.name %>
    </p>

    <p>
      <strong>code:</strong>
      <%= @route.code %>
    </p>

    <p>
      <strong>description:</strong>
      <%= @route.description %>
    </p>
  </div>
</div>

<%= link_to "Edit",edit_route_path(@route), class: "btn btn-success" %>
<%= link_to "Back",routes_path, class: "btn btn-info" %>
